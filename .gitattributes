# Auto detect text files and perform LF normalization
* text=auto

# JS files should use LF
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf

# CSS files should use LF
*.css text eol=lf
*.scss text eol=lf

# HTML files should use LF
*.html text eol=lf

# Images should be treated as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf

# Fonts
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary

# Specific for Windows
*.bat text eol=crlf

